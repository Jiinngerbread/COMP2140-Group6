<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorAccent"
                android:padding="10dp">
                <!--            <com.androdocs.circleimagelibrary.CircleImageView-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="200dp"-->
                <!--                android:src="@drawable/user_img"-->
                <!--                app:border_width="10dp"-->
                <!--                app:border_color="#000000"-->
                <!--                android:padding="20dp"-->
                <!--                />-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100sp"
                    android:src="@drawable/user_img"
                    android:padding="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User name and Last"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:id="@+id/names"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textStyle="bold|italic"
                android:text="Dailly Analysis"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:padding="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_margin="4dp"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_weight="3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calories"
                        android:textColor="#ffffff"
                        android:layout_gravity="center"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textSize="13dp"
                        android:textAlignment="center"
                        android:id="@+id/tot_calorie_title"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100cals"
                        android:textColor="#ffffff"
                        android:layout_gravity="center"
                        android:id="@+id/tot_calorie"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_weight="3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meals"
                        android:textColor="#ffffff"
                        android:layout_gravity="center"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textSize="13dp"
                        android:textAlignment="center"
                        android:id="@+id/number_meals_title"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="#ffffff"
                        android:layout_gravity="center"
                        android:id="@+id/number_meals"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_weight="3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day"
                        android:textColor="#ffffff"
                        android:layout_gravity="center"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textSize="13dp"
                        android:textAlignment="center"
                        android:id="@+id/day_title"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="#ffffff"
                        android:layout_gravity="center"
                        android:id="@+id/day"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <at.grabner.circleprogress.CircleProgressView
                    android:id="@+id/progress_circular"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    CircleProgressView:cpv_autoTextSize="true"
                    CircleProgressView:cpv_barColor="@color/colorPrimaryDark"
                    CircleProgressView:cpv_barWidth="25dp"
                    CircleProgressView:cpv_innerContourSize="0dp"
                    CircleProgressView:cpv_maxValue="100"
                    CircleProgressView:cpv_outerContourSize="0dp"
                    CircleProgressView:cpv_rimColor="@color/colorAccent"
                    CircleProgressView:cpv_rimWidth="25dp"
                    CircleProgressView:cpv_seekMode="false"
                    CircleProgressView:cpv_showUnit="true"
                    CircleProgressView:cpv_spinColor="@color/colorPrimary"
                    CircleProgressView:cpv_textColor="@color/colorPrimaryDark"
                    CircleProgressView:cpv_textScale="1"
                    CircleProgressView:cpv_unit="%"
                    CircleProgressView:cpv_unitColor="@color/colorAccent"
                    CircleProgressView:cpv_unitPosition="right_top"
                    CircleProgressView:cpv_unitScale="1"
                    CircleProgressView:cpv_value="20"
                    CircleProgressView:cpv_blockCount="18"
                    CircleProgressView:cpv_blockScale="0.9"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Age: 23"
                        android:layout_gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:id="@+id/age"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gender: N/A"
                        android:layout_gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:id="@+id/gender"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Goal: 120 lb"
                        android:layout_gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:id="@+id/goal"
                        android:padding="5dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:weightSum="3">
                <Button style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:layout_margin="5dp"
                    android:id="@+id/edit_profile"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="13dp"/>

                <Button style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Client"
                    android:layout_margin="5dp"
                    android:id="@+id/add_user"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="13dp"/>

                <Button style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Meal Plan"
                    android:layout_margin="5dp"
                    android:id="@+id/add_meal_plan"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="13dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>