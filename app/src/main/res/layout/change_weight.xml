<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingEnd="2"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="25dp"
            android:gravity="start"
            android:linksClickable="false"
            android:longClickable="false"
            android:paddingLeft="1"
            android:paddingEnd="1"
            android:text="@string/update_weight"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:visibility="invisible"
            tools:visibility="visible" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/UpdateWeightButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#009688"
                android:bufferType="normal"
                android:fadingEdge="horizontal"
                android:text="@string/save" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/changeWeightInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/updated_weight"
                android:inputType="number"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</LinearLayout>
